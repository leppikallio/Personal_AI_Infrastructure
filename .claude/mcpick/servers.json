{
  "servers": [
    {
      "name": "context7",
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    {
      "name": "Ref",
      "type": "http",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "${REF_API_KEY}"
      }
    },
    {
      "name": "brightdata",
      "command": "bunx",
      "args": ["-y", "@brightdata/mcp"],
      "env": {
        "API_TOKEN": "${BRIGHTDATA_API_KEY}"
      }
    },
    {
      "name": "apify",
      "command": "bunx",
      "args": ["@apify/actors-mcp-server"],
      "env": {
        "APIFY_TOKEN": "${APIFY_API_KEY}"
      }
    },
    {
      "name": "playwright",
      "command": "bunx",
      "args": ["@playwright/mcp@latest", "--extension"],
      "env": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "${PLAYWRIGHT_MCP_EXTENSION_TOKEN}"
      }
    },
    {
      "name": "arxiv-mcp-server",
      "command": "uv",
      "args": ["tool", "run", "arxiv-mcp-server", "--storage-path", "/Users/zuul/Documents/arxiv"]
    },
    {
      "name": "deploy-mcp",
      "type": "stdio",
      "command": "npx",
      "args": ["deploy-mcp"],
      "env": {
        "CLOUDFLARE_TOKEN": "${CLOUDFLARE_API_TOKEN}",
        "CLOUDFLARE_ACCOUNT_ID": "${CLOUDFLARE_ACCOUNT_ID}"
      }
    },
    {
      "name": "chrome-devtools",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest", "--isolated=true"]
    }
  ]
}
