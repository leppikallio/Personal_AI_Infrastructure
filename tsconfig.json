{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    ".claude/**/*.ts",
    ".claude/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    ".claude/history/**",
    ".claude/scratchpad/**",
    ".claude/plans/**",
    ".claude/todos/**",
    ".claude/debug/**",
    ".claude/file-history/**",
    ".claude/session-env/**",
    ".claude/shell-snapshots/**",
    ".claude/statsig/**",
    ".claude/projects/**",
    ".claude/plugins/**",
    ".claude/ide/**"
  ]
}
